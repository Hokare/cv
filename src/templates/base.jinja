<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='icon/homme-daffaire1.png') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/style.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/transition.css') }}">
    <script defer src="{{ url_for('static', filename='node_modules/swup/dist/swup.min.js') }}"></script>
    <title>CV Martin Barbey</title>
</head>

<body>
    <nav class="nav bar">
        <div class="nav namenav">
            <a href="{{ url_for('accueil') }}">
                <h1>Martin Barbey</h1>
            </a>
            <h2>/ Etudiant en Systèmes Numériques</h2>
        </div>
        <div class="nav menu">
            <a class="animationtext" href="{{ url_for('accueil') }}">Accueil</a>
            <a class="animationtext" href="{{ url_for('experiences') }}">Expériences</a>
            <a class="animationtext" href="{{ url_for('competences') }}">Compétences</a>
            <a class="animationtext" href="{{ url_for('scolarite') }}">Scolarité</a>
            <a class="animationtext" href="{{ url_for('diplomes') }}">Diplômes</a>
            <a class="animationtext" href="{{ url_for('projets') }}">Projets</a>
            <a class="animationtext" href="{{ url_for('loisirs') }}">Loisirs</a>
        </div>
    </nav>

    <main id="swup" class="page">
        {% block css %}{% endblock %}
        {% block content %}{% endblock %}
    </main>
    
    <footer class="piedpage">
        <div></div>
        <div class="piedpage">
            <div class="footerdivmarge divtel">
                <p class="footerp">Téléphone</p>
                <a class="footeratext tel animationtext" href="tel:0604525099">06 04 52 50 99</a>
            </div>
            <div class="footerdivmarge divmail">
                <p class="footerp">E-mail</p>
                <a class="footeratext mail animationtext" href="mailto:martin.barbey01@gmail.com"
                    target="_blank">martin.barbey01@gmail.com</a>
            </div>
            <div class="footerdivmarge divadresse">
                <p class="footerp">Adresse</p>
                <a class="footeratext adresse animationtext" href="https://goo.gl/maps/dK8vyFm98nUtfeRx8"
                    target="_blank">28
                    Avenue
                    Messmer, 67400 Illkirch, France</a>
            </div>
            <div class="footerdivmarge divreseau">
                <p class="footerp">En Ligne</p>
                <div class="divicon">
                    <a class="footeraicon linkedin" href="https://www.linkedin.com/in/martin-barbey/" target="_blank">
                        <img class="iconlinkedin" src="{{ url_for('static', filename='icon/linkedin.png') }}" alt="Linkedin">
                    </a>
                    <a class="footeraicon github" href="https://github.com/Hokare" target="_blank">
                        <img class="icongithub" src="{{ url_for('static', filename='icon/github.png') }}" alt="Github">
                    </a>
                    <a class="footeraicon gitlab" href="https://gitlab.com/Hokare" target="_blank">
                        <img class="icongitlab" src="{{ url_for('static', filename='icon/gitlab.png') }}" alt="Gitlab">
                    </a>
                </div>
            </div>
        </div>
        <div></div>
    </footer>
</body>

</html>
